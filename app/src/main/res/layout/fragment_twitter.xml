<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Хабрахабр"
                android:id="@+id/textViewName"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/userImageView"
                android:layout_toEndOf="@+id/userImageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\@habrahabr"
                android:id="@+id/textViewUserHash"
                android:textColor="#8899a6"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textViewName"
                android:layout_toEndOf="@+id/textViewName"
                android:layout_marginLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="9 ч"
                android:id="@+id/textViewTime"
                android:textColor="#8899a6"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Тренируемся на кошках: http://habr.ru/p/270721/ . Опыт использования рекламной программы Apple iAd. "
                android:id="@+id/textViewPost"
                android:layout_below="@+id/textViewName"
                android:layout_alignLeft="@+id/textViewName"
                android:layout_alignStart="@+id/textViewName"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:autoLink="web" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/userImageView"
                android:layout_weight="1"
                android:src="@drawable/oauth_application"
                android:scaleType="fitCenter"
                android:layout_alignBottom="@+id/textViewPost"
                android:layout_alignParentTop="true"
                android:paddingLeft="3dp"
                android:paddingRight="3dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
